<div class="show-item">
 <div class="show-title"><p><%= @what %></p></div>
   <div class="or-spacer">
  <div class="mask"></div>
  <span><i></i></span>
</div>
  <div class="show-img">
  	<div id="links" class="ocultarLinks">
      	<%= link_to (image_tag @link), (image_path @link) , title: @what %>

		<% @images = Dir.glob("app/assets/images/tools/"+@carpeta+"/*.jpg") %>

  	 	
  	 		<% @images.each do |image| %>
  	 		 	  <%= link_to "Ver Galeria de fotos", image_path("tools/"+@carpeta+"/#{image.split('/').last}"), title:"#{image.split('/').last.split('.').first}" %>
  	 		<% end %>
  	 
	</div>

  </div>
  <p>*Haz Click en la imagen para ver la galeria de Fotos</p>

<div class="wrapper">
 



  <div class="show-desc">
  	<% @elements.each do |element| %>
  		<%if(element.sub_model!="")%>
		<p class="tool-desc"> -<b><%=element.sub_model%>:</b> <%=element.description.html_safe %></p>
		<%end %>
	<%end %>
  <p>*Manejamos stock disponible en forma permanente, para la entrega inmediata.</p>
  </div>


</div>

</div>

<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"> </ol>
</div>



 <script>
document.getElementById('links').onclick = function (event) {
    event = event || window.event;
    var target = event.target || event.srcElement,
        link = target.src ? target.parentNode : target,
        options = {index: link, event: event},
        links = this.getElementsByTagName('a');
    blueimp.Gallery(links, options);
};
</script>


